        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.Admin_Gender, htmlAttributes: new { @class = "control-label col-md-1" })*@
            <div class="col-md-10">
                @Html.RadioButtonFor(model => model.Admin_Gender, "Male", new { htmlAttributes = new { @class = "form-control" } }) Male <br />
                @Html.RadioButtonFor(model => model.Admin_Gender, "Female", new { htmlAttributes = new { @class = "form-control" } }) Female<br />

                @Html.ValidationMessageFor(model => model.Admin_Gender, "", new { @class = "text-danger" })
