    Layout = null;
}

<h2>Create</h2>


@using (Html.BeginForm("Create", "Admins", FormMethod.Post, new { onsubmit = "return SubmitFrom(this)", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Admin</h4>
        <hr />
        <label class="alert-success">@ViewBag.SuccessMessage</label>
