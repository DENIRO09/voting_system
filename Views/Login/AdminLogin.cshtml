@model E_Lect.Models.Admin

@{
    ViewBag.Title = "ADMIN | Login";
}

<h2>Login</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Admin</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">

            <div class="col-md-10">
                @Html.EditorFor(model => model.Admin_Username, new { htmlAttributes = new { @class = "form-control", placeholder = "Username" } })
                @*<span class="glyphicon glyphicon-user control-label col-md-2"></span>*@
                @Html.ValidationMessageFor(model => model.Admin_Username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.Admin_Password, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.EditorFor(model => model.Admin_Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Password" } })
                @Html.ValidationMessageFor(model => model.Admin_Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>
            <label class="alert-danger">@ViewBag.ErrorMessage</label>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-primary" />
                <input type="reset" value="Clear" class="btn btn-default" />
            </div>

        </div>
    </div>
}

<div>
    @Html.ActionLink("Forgot password", "AdminForgotPassword")
</div>


